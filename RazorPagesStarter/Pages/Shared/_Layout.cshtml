<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Razor App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <<header class="bg-dark text-white p-3 mb-4">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="mb-0">🌐 Razor Pages App</h1>
        <nav>
            <a asp-page="/Index" class="btn btn-outline-light me-2">Home</a>
            <a asp-page="/About" class="btn btn-outline-light">About</a>
        </nav>
    </div>
</header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-4">
        <small>© 2025 Tamer Hussein</small>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
