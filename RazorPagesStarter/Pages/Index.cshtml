@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Welcome</h2>

<form method="post">
    <label asp-for="UserName">Enter your name:</label>
    <input asp-for="UserName" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Greet Me</button>
</form>

@if (!string.IsNullOrEmpty(Model.Greeting))
{
    <div class="alert alert-success mt-3">@Model.Greeting</div>
}
